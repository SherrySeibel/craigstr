<h2>Admin Control Board</h2>

<h3>Create a new Craigstr region:</h3>
<%= form_for @region do |region| %>
  <%= region.text_field :name, placeholder: "Region..." %>
  <%= region.submit "Create New Region" %>
<% end %>

<h3>Create a new category for a region:</h3>
<%= form_for @category do |category| %>
	<%= category.label :region, "Select a region:" %>
	<%= category.collection_select :region_id, Region.order(:name),:id,:name %>
  <%= category.text_field :name, placeholder: "Enter New Category..." %>
  <%= category.submit "Create" %>
<% end %>

<h3>All marked spam</h3>
<p>Please moderate suspected spam for your region.</p>

<%= form_for :spam do |spam| %>
<% end %>