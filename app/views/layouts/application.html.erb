<!DOCTYPE html>
<html>
<head>
  <title>Craigstr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1><%= link_to "Craigstr", root_path %></h1>

<% if signed_in? %>
  <p>You are currently signed in as <%= current_user.email %>. (<%= link_to "Sign out?", session_path, method: :delete %>)</p>
<% end %>

<% if current_user.admin? %>
  <%= link_to "Admin Control Board", :admin_options %>
<% end %>

<%= yield %>

</body>
</html>
